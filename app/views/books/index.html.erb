<h1>Books</h1>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3">
      
    </tr>
      <% @books.each do|book| %>
      <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      </tr>
      <% end %>
  </thead>
  </table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<h3>Title</h3>
<%= f.text_field :title %>
<h3>Body</h3>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>